<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.customers.CustomersController">
    <children>
        <TableView fx:id="customersTable" layoutX="24.0" layoutY="30.0" prefHeight="300" prefWidth="732">
            <columns>
                <TableColumn fx:id="customerIdCol" prefWidth="36.40002250671387" text="ID"/>
                <TableColumn fx:id="nameCol" prefWidth="123.5999526977539" text="Name"/>
                <TableColumn fx:id="addressCol" prefWidth="225.20001220703125" text="Address"/>
                <TableColumn fx:id="divisionCol" prefWidth="82.39996337890625" text="Division"/>
                <TableColumn fx:id="countryCol" prefWidth="57.600006103515625" text="Country"/>
                <TableColumn fx:id="postalCodeCol" prefWidth="96.39990234375" text="Postal Code"/>
                <TableColumn fx:id="phoneCol" prefWidth="109.20001220703125" text="Phone"/>
            </columns>
        </TableView>
        <Button fx:id="modifyBtn" layoutX="87.0" layoutY="347.0" mnemonicParsing="false"
                onAction="#handleModifyBtnAction" text="Modify"/>
        <Button fx:id="deleteBtn" layoutX="24.0" layoutY="347.0" mnemonicParsing="false"
                onAction="#handleDeleteBtnAction" style="-fx-background-color: #dc3545;" text="Delete"/>
        <Button fx:id="scheduleAppointmentBtn" layoutX="321.0" layoutY="347.0" mnemonicParsing="false"
                onAction="#handleScheduleAppointmentBtnAction" text="Schedule Appointment"/>
        <Button fx:id="addCustomerBtn" layoutX="663.0" layoutY="347.0" mnemonicParsing="false"
                onAction="#handleAddCustomerBtnAction" text="Add Customer"/>
    </children>
</AnchorPane>
