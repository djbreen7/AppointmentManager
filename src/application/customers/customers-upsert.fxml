<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="780.0" stylesheets="@customers.css" xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.customers.CustomersUpsertController">
    <children>
        <Button fx:id="saveBtn" layoutX="716.0" layoutY="347.0" mnemonicParsing="false" onAction="#handleSaveBtnAction"
                style="-fx-background-color: #007bff;" text="Save" textFill="WHITE"/>
        <Button fx:id="cancelBtn" layoutX="650.0" layoutY="347.0" mnemonicParsing="false"
                onAction="#handleCancelBtnAction" text="Cancel"/>
        <Label fx:id="customerIdLabel" layoutX="33.0" layoutY="34.0" text="Customer ID"/>
        <TextField fx:id="customerIdTextField" disable="true" editable="false" layoutX="112.0" layoutY="30.0"/>
        <Label fx:id="nameLabel" layoutX="33.0" layoutY="113.0" text="Name"/>
        <TextField fx:id="nameTextField" layoutX="112.0" layoutY="109.0" prefHeight="25.0" prefWidth="395.0"/>
        <Label fx:id="phoneLabel" layoutX="541.0" layoutY="113.0" text="Phone"/>
        <TextField fx:id="phoneTextField" layoutX="591.0" layoutY="109.0" prefHeight="25.0" prefWidth="166.0"/>
        <Label fx:id="addressLabel" layoutX="33.0" layoutY="157.0" text="Address"/>
        <TextField fx:id="addressTextField" layoutX="112.0" layoutY="153.0" prefHeight="25.0" prefWidth="395.0"/>
        <Label fx:id="postalCodeLabel" layoutX="33.0" layoutY="201.0" text="Postal Code"/>
        <TextField fx:id="postalCodeTextField" layoutX="112.0" layoutY="197.0"/>
        <Label fx:id="divisionLabel" layoutX="283.0" layoutY="201.0" text="Division"/>
        <ComboBox fx:id="divisionComboBox" layoutX="340.0" layoutY="197.0" prefHeight="25.0" prefWidth="166.0"/>
        <Label fx:id="countryLabel" layoutX="532.0" layoutY="201.0" text="Country"/>
        <ComboBox fx:id="countryComboBox" layoutX="591.0" layoutY="197.0" onAction="#handleCountryComboAction"
                  prefHeight="25.0" prefWidth="166.0"/>
        <Label fx:id="errorLabel" layoutX="111.0" layoutY="351.0"
               textFill="#dc3545" visible="false"/>
    </children>
</AnchorPane>
